<% content_for :body do %>
<div>
  <h1>Articles</h1>

  <p>Our blog has <%= Article.public_count %> articles and counting!</p>

  <br>
  <ul>
    <% @articles.each do |article| %>
      <% unless article.archived? %>
        <li>
         <%= link_to article.title, article %>
        </li>
      <% end %>
    <% end %>
  </ul>

  <br>
  <%= link_to "New Article", new_article_path %>

</div>
<%= stylesheet_link_tag "article" %>
<% end %>